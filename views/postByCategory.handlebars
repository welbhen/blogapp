<h1>{{category.name}}</h1>
{{#each posts}}
	<div class="card mt-3">
		<div class="card-body">
			<h4>{{title}}</h4>
			<p>{{description}}</p>
			<small>Posted at: {{date}}</small>
			<br>
			<a href="/post/{{slug}}">
				<button class="btn btn-warning mt-2">Read more...</button>
			</a>
		</div>
	</div>

	{{else}}
	<h4 class="mt-4">No posts yet!</h4>
{{/each}}