<div class="bg-light p-5 rounded-lg m-3">
	<h1 class="display-4">Welcome to the Node.js blog!</h1>
	<p class="lead">This blog was created using: Node.js, Express, Mongoose, Handlebars, Body-Parser, bcryptjs and Passport.</p>
	<hr class="my-4">
	<p>
		<a class="btn btn-primary btn-lg" href="/user/register" role="button">Sign up</a>
	</p>
</div>
<hr>
<h2>Recent posts</h2>

{{#each posts}}
	<div class="card mt-3">
		<div class="card-body">
			<small>Category: {{category.name}}</small>
			<hr>
			<h4>{{title}}</h4>
			<p>{{description}}</p>
			
			<a href="/post/{{slug}}">
				<button class="btn btn-warning">Read more...</button>
			</a>
		</div>
	</div>

	{{else}}
	<h4 class="mt-4">No posts yet!</h4>
{{/each}}